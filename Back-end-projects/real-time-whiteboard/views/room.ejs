</head>

<body oncontextmenu="return false;">
    <div id="background"></div>
    <svg xmlns="http://www.w3.org/2000/svg" id="board">
        <g id="scene" class="scene"></g>
    </svg>
    <div class="panels">
        <div class="topPanel">
            <button type="button" id="link" onclick="copyLink()" data-tooltip="Copy the link to invite participants to this room"></button>
            <!-- <button type="button" id="download" onclick="exportBoardAsPNG()"></button> -->
        </div>

        <div class="dockPanel">
            <div class="main-tools">
                <div class="tools">
                    <button type="button" id="undo" onclick="undo(), sendCommand('undo')" data-tooltip="Cancel action"></button>
                    <button type="button" id="redo" onclick="redo(), sendCommand('redo')" data-tooltip="Return"></button>
                </div>
                <div class="tools center">
                    <button type="button" id="pointer" onclick="changeAction(this)" data-tooltip="Pointer"></button>
                    <button type="button" id="pen" class="active" onclick="changeAction(this)" data-tooltip="Marker"></button>
                    <button type="button" id="eraser" onclick="changeAction(this)" data-tooltip="Eraser"></button>
                    <input type="file" accept="image/gif, image/jpeg, image/png" name="image" id="file" onchange="addImage(event)" style="display: none;">
                    <label for="file" id="photo" data-tooltip="Insert image writing on the board"></label>
                    <button type="button" id="clear" onclick="clearBoard(), sendCommand('clear')" data-tooltip="Clear board"></button>
                </div>
                <div class="tools">
                    <button id="color" onwheel="scrollColor(event)" data-tooltip="Change marker color"></button>
                    <button id="size" onwheel="scrollSize(event)" data-tooltip="Change marker size"></button>
                    <button id="pattern" onwheel="scrollPattern(event)" data-tooltip="Change board background"></button>
                </div>
            </div>
            <div id="sizes" class="tools settings" onwheel="scrollSize(event)">
                <button id="small" onclick="setBrush({width: 3})" data-tooltip="Small marker"></button>
                <button id="middle" class="active" onclick="setBrush({width: 4})" data-tooltip="Middle marker"></button>
                <button id="big" onclick="setBrush({width: 5})" data-tooltip="Large marker"></button>
            </div>
            <div id="colors" class="tools settings" onwheel="scrollColor(event)">
                <button id="black" class="active" onclick="setBrush({color: '#000'})" data-tooltip="Black marker"></button>
                <button id="red" onclick="setBrush({color: '#d01919'})" data-tooltip="Red marker"></button>
                <button id="yellow" onclick="setBrush({color: '#eaae00'})" data-tooltip="Yellow marker"></button>
                <button id="green" onclick="setBrush({color: '#16ab39'})" data-tooltip="Green marker"></button>
                <button id="blue" onclick="setBrush({color: '#1678c2'})" data-tooltip="Blue marker"></button>
                <input type="color" id="colorInput" data-tooltip="Marker color palette">
            </div>
            <div id="patterns" class="tools settings" onwheel="scrollPattern(event)">
                <button id="none" class="active" onclick="setPattern('none'), sendCommand('none')" data-tooltip="Blank background"></button>
                <button id="sq" onclick="setPattern('sq'), sendCommand('sq')" data-tooltip="Checkered background"></button>
                <button id="line" onclick="setPattern('line'), sendCommand('line')" data-tooltip="Lined background"></button>
                <button id="dot" onclick="setPattern('dot'), sendCommand('dot')" data-tooltip="Background on point"></button>
            </div>
        </div>
    </div>
</body>

</html>